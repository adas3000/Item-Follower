<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        />


    <TextView
        android:id="@+id/textView_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imageView_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/default_item_title"
        />

    <TextView
        android:id="@+id/textView_item_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/item_run_in_background_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imageView_logo"
        app:layout_constraintTop_toBottomOf="@id/textView_item_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/textView_item_expired_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imageView_logo"
        app:layout_constraintTop_toBottomOf="@id/textView_item_price"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:lines="2"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textView_item_last_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toRightOf="@id/imageView_logo"
        app:layout_constraintTop_toBottomOf="@id/textView_item_expired_in"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/default_item_last_update_time"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
